    .container
      .navbar-header
        button.navbar-toggle.collapsed(
          type='button',
          data-toggle='collapse',
          data-target='#navbar',
          aria-expanded='false',
          aria-controls='navbar'
        )
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') Dice Menu
      #navbar.collapse.navbar-collapse
        ul.nav.navbar-nav
          li
            a(href='/') Home
          li
            a(href='/about') About
        ul.nav.navbar-nav.navbar-right
          li(role="presentation")
            a(href='#') Dialogs
              span.badge {{dialogs.count}}
          +loginButtons

  .container
